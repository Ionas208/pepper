<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/tvTitleCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WÃ¤hle eine Kategorie"
            android:textColor="#000000"
            android:textSize="64dp"
            app:layout_constraintBottom_toTopOf="@+id/btTopic2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btTopic1"
            android:layout_width="@dimen/answer_width"
            android:layout_height="@dimen/answer_height"
            android:background="@drawable/ic_rounded_corners"
            android:text="Sport"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btTopic2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btTopic2"
            android:layout_width="@dimen/answer_width"
            android:layout_height="@dimen/answer_height"
            android:background="@drawable/ic_rounded_corners"
            android:text="Geschichte"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btTopic3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btTopic1"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btTopic3"
            android:layout_width="@dimen/answer_width"
            android:layout_height="@dimen/answer_height"
            android:background="@drawable/ic_rounded_corners"
            android:text="Geographie"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btTopic2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btRandomTopic"
            android:layout_width="@dimen/random_button_size"
            android:layout_height="@dimen/random_button_size"
            android:layout_marginBottom="50dp"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_random" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
